@model ShoppingSystemMVC.Models.UserViewModel

@{
    ViewBag.Title = "Registation";
}

<h2 style="text-align: center">Registration</h2>
<style>
    body
    {
        background-image: url('../Images/BGimg.jpg');
        background-position: inherit;
